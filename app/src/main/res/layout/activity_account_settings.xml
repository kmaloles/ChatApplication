<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kmaloles.mymessagingapp.main.AccountSettingsActivity"
    android:paddingBottom="16dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/textSettings"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/account"
        android:textAllCaps="true"
        android:textSize="26sp" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="top|right"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/ic_back_button"
        android:textAllCaps="false" />


    <TextView
        android:id="@+id/textAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBack"
        android:layout_marginTop="32dp"
        android:paddingLeft="16dp"
        android:text="@string/account"
        android:textAllCaps="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textAccount"
        android:layout_below="@+id/btnBack"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        tools:text="c2q9450@gmail.com" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textEmail"
        android:layout_below="@+id/textEmail"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/fui_bgEmail"
        android:text="@string/sign_out"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>
